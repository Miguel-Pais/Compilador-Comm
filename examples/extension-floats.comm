#
# this code is for reference extension of floats (average difficulty)
#
new pi_approx := 0. in
new denom := 1. in
new sign := 1. in
new iterations := 50 in  # Increase for a better approximation
new i := 0 in

while i < iterations do
  pi_approx := pi_approx +. sign *. (1. /. denom);
  denom := denom +. 2.;
  sign := sign *. (-1.);
  i := i + 1
done;

pi_approx := pi_approx *. 4.;
print_f pi_approx;
skip
